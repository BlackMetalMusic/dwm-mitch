+static int
+readhistory (void) {
+    char buf[1024];
+    FILE *f;
+
+
+    if(!histfile)
+        return 0;
+
+    if( (f = fopen(histfile, "r+")) ) {
+        while(fgets(buf, sizeof buf, f))  
+            strncpy(hist[hcnt++], buf, (strlen(buf) <= 1024) ? strlen(buf): 1024 );
+        fclose(f);
+    }
+
+    return hcnt;
+}
